{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../../src/$1"
  },
  "testEnvironment": "node",
  "testMatch": ["**/integration/**/*.test.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/bootstrap.ts"],
  "testTimeout": 10000
}
